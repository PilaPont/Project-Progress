<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_task_form2_inherit_form_view">
        <field name="name">project.task.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <page name="extra_info" position="after">
                <page name="checklist" string="Checklist"
                      attrs="{'invisible': [('use_deliverables', '=', False)]}">
                    <group>
                        <group>
                            <label for="checklist_done_items_count" string="Checklist Status"/>
                            <div>
                                <field name="use_deliverables" invisible="True"/>
                                <field name="checklist_done_items_count" class="oe_inline"/>
                                <label for="checklist_items_count" class="oe_inline" string="/"/>
                                <field name="checklist_items_count" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="checklist_progress" widget="progressbar"/>
                        </group>
                    </group>

                    <field name="checklist_item_ids">
                        <tree editable="buttom" decoration-muted="done == True">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="weight"/>
                            <field name="done"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_tree2_inherit_tree_view">
        <field name="name">project.task.tree.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="checklist_progress" widget="progressbar"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_kanban_inherit">
        <field name="name">project.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="checklist_progress"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="before">
                <div class="text-right">
                    <field name="checklist_progress" widget="gauge"
                           options="{'style': 'width:50%;height:30%;cursor:pointer;'}">
                        Weighted Progress
                    </field>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
